{
    "manifest_version": 3,
    "name": "Tracker Blocker",
    "version": "1.0",
    "description": "Blocks known tracking scripts for better privacy.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/icon48.png"
        },
        "default_title": "Tracker Blocker"
    }, 
    "icons": {
        "48": "icons/icon48.png"
    }
}
